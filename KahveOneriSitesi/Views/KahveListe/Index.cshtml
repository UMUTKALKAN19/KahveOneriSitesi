@model List<KahveOneriSitesi.Data.Models.Kahve>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}
<div class="container">
    <h1 class="text-center mb-4"></h1>
    <div class="row">
        @if (Model != null)
        {
            <div class="row">
                @foreach (var x in Model)
                {
                    <div class="col-md-4" width="300" height="280">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@x.KahveResim" alt="Resim Bulunamadı" width="300" height="240">
                            <div class="card-body">
                                <h5 class="card-title">@x.KahveAd</h5>
                                <p class="card-text"></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted"></span>
                                    <a href="/KahveListe/KahveDetay/@x.KahveID" class="btn btn-primary" style="background-color:#964B00">Detay</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Kahve önerileri bulunamadı.</p>
        }
    </div>
</div>



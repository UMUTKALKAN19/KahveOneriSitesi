
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>İletişim</title>
    <style>
        /* sayfa stilleri */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            line-height: 1.5;
        }

        h1 {
            text-align: center;
            margin-top: 50px;
        }

        form {
            margin: 50px auto;
            width: 60%;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        label, input, textarea {
            display: block;
            margin-bottom: 10px;
            width: 100%;
            box-sizing: border-box;
            font-size: 1.1rem;
        }

            input[type="submit"] {
                background-color: #4CAF50;
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 1.1rem;
                cursor: pointer;
            }

                input[type="submit"]:hover {
                    background-color: #3e8e41;
                }
    </style>
</head>
<body>
    <h1>İletişim</h1>
    <form method="post" action="~/MesajAt/MesajEkle/">
        <label for="name">Adınız:</label>
        <input type="text" id="MesajGonderen" name="MesajGonderen" required>

        <label for="email">E-posta Adresiniz:</label>
        <input type="email" id="MesajMail" name="MesajMail" required>

        <label for="subject">Konu:</label>
        <input type="text" id="MesajBaslik" name="MesajBaslik" required>

        <label for="message">Mesajınız:</label>
        <textarea id="MesajIcerik" name="MesajIcerik" rows="5" required></textarea>
        <div>Kahve Önerileri İçin Fotoğrafları Mesajınız Kısmında Hızlı Resim Linki Olarak Ekleyebilirsiniz.</div>

        <input type="submit" value="Gönder">
    </form>
</body>
</html>
